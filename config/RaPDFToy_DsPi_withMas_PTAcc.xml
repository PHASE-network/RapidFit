		</PhysicsParameter>
		
		0.33
		<PhysicsParameter>
			<Name>timeresDsPi</Name>
			<Value>0.33</Value>
			<Minimum>0.0</Minimum>
			<Maximum>0.5</Maximum>
			<Type>Fixed</Type>
			<Unit>ps</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>AcceptanceOffset</Name>
			<Value>0.00</Value>
			<Minimum>-1.0</Minimum>
			<Maximum>1.0</Maximum>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>AcceptanceSlope</Name>
			<Value>1</Value>
			<Minimum>1.0</Minimum>
			<Maximum>10.0</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>AcceptancePower</Name>
			<Value>2.2</Value>
			<Minimum>2.0</Minimum>
			<Maximum>5</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>
				
//........... Signal mass PDF parameters ...........
		<PhysicsParameter>
			<Name>f_sig_m1</Name>
			<Value>0.55</Value>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>sigma_m1</Name>
			<Value>11.0</Value>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>sigma_m2</Name>
			<Value>18.5</Value>
			<Type>Fixed</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>m_Bs</Name>
			<Value>5364.4</Value>
			<Type>Fixed</Type>
			<Unit>MeV/c^{2}</Unit>
		</PhysicsParameter>


	</ParameterSet>


	<Minimiser>Minuit</Minimiser>

	<FitFunction>NegativeLogLikelihood</FitFunction>

	<NumberRepeats>1</NumberRepeats>

	<Output>
		<Projection>time</Projection>
	</Output>

	<ToFit>
	
Bs2DsPi_acc
		<ProdPDF>
			<PDF>
				<Name>Bs2DsPi_acc</Name>
			</PDF>
			<PDF>
				<Name>Bs2DsPiMassSignal</Name>
			</PDF>
		</ProdPDF>

~/work/bias/MC_Loose_cuts/signal/Bs2Dspi/standard/DVTuples_RapidFit_1PV.root
		<DataSet>
			<Source>File</Source>
			<FileName>~/work/bias/MC_Loose_cuts/signal/Bs2DsPi/MCTrue/DVTuples_RapidFit.root</FileName>
			<NTuplePath>ntuple</NTuplePath>
		
			<CutString>time>0</CutString>
			
			<NumberEvents>100000</NumberEvents>
			<PhaseSpaceBoundary>
				<Observable>
					<Name>time</Name>
					<Minimum>-2</Minimum>
					<Maximum>12</Maximum>
					<Unit>ps</Unit>
				</Observable>

				<Observable>
					<Name>tag</Name>
