<RapidFit>
	/////////////////////////////////////////
	// Example RapidFit configuration file //
	// Author: Ben Wynne                   //
	/////////////////////////////////////////
	<ParameterSet>
		<PhysicsParameter>
			<Name>gamma</Name>
			<Value>0.68</Value>
			<Minimum>0.0</Minimum>
			<Maximum>1.5</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>deltaGamma</Name>
			<Value>0.049</Value>
			<Minimum>-1.0</Minimum>
			<Maximum>1.0</Maximum>
			<Type>Free</Type>
			<Unit>Unitless</Unit>
		</PhysicsParameter>

		<PhysicsParameter>
			<Name>deltaM</Name>
			<Value>17.77</Value>
			<Minimum>17.0</Minimum>
			<Maximum>20.0</Maximum>
			<Type>Free</Type>
			<Unit>MeV/c2</Unit>
		</PhysicsParameter>
	</ParameterSet>


	<Minimiser>Minuit2</Minimiser>

	<FitFunction>NegativeLogLikelihood</FitFunction>

	<NumberRepeats>1</NumberRepeats>

	<Output>
		<Projection>time</Projection>
	</Output>

	<ToFit>
		<PDF>
			<Name>Bs2DsPi</Name>
		</PDF>

		<DataSet>
			<Source>File</Source>
			<FileName>/tmp/offline_selected_Bs2DsPi_events.root</FileName>
			<NTuplePath>DsPi</NTuplePath>
			<NumberEvents>10000</NumberEvents>
			<PhaseSpaceBoundary>
				<Observable>
					<Name>time</Name>
					<Minimum>0.3</Minimum>
					<Maximum>15.0</Maximum>
					<Unit>ps</Unit>
				</Observable>

				<Observable>
					<Name>tag</Name>
					<Value>-1.0</Value>
					<Value>0.0</Value>
					<Value>1.0</Value>
					<Unit>Unitless</Unit>
				</Observable>

				<Observable>
					<Name>mistag</Name>
					<Minimum>0.0</Minimum>
					<Maximum>1.0</Maximum>
					<Unit>Unitless</Unit>
				</Observable>
			</PhaseSpaceBoundary>
		</DataSet>
	</ToFit>
</RapidFit>
